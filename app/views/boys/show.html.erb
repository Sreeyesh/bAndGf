<div class="container">
<h1 class = "boy_head"> <%= @boy.full_name %> </h1>
<p style="float: right;">

  <a href="<%= new_boy_girl_friend_path(@boy.id) %>" class="btn btn-info btn-sm">
    <span class="glyphicon glyphicon-user"></span> New Girl Friend 
  </a>
</p> 

<p>

  <a href="<%= boys_path() %>" class="btn btn-warning btn-sm">
    <span class="glyphicon glyphicon-user"></span> Boys List
  </a>
</p> 

<div class="col-sm-12" >
	<div class="col-sm-4">
  <img src="<%= @boy.gravatar %>" class="img-rounded" alt="Cinque Terre" width="200" height="200">
  </div>
  <div class="col-sm-8" style="font-size: x-large;">

  	<label>Email:</label><span class="boyspan" ><%= @boy.email %> </span></br>
  	<label>Number of GF:</label> <span class="boyspan"><%= @boy.girl_friends.length %></span>

  </div>

 	

</div>
<div style="float: right;margin-bottom: 15px">
     	<%= link_to "Edit Details", edit_boy_path(@boy.id) ,:class => "btn btn-warning btn-xs" %>
     	<%= link_to "Delete Details", {:action => :destroy, :id=> @boy.id} ,:method=> :delete, :class => "btn btn-danger btn-xs" %>
</div>
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col" >#</th>
      <th scope="col" >GF Name</th>
      <th scope="col" >Email</th>
      <th scope="col" >Options</th>
    </tr>
  </thead>
  <tbody>
    
      <% @boy.girl_friends.each do|gf| %>
      <tr>
      	<td style="border-color: #32383e;"> <%= @boy.girl_friends.index(gf) + 1 %> </td>
      	<td style="border-color: #32383e;"> <%= gf.first_name%> </td>
      	<td style="border-color: #32383e;"> <%= gf.email%> </td>
      	<td style="border-color: #32383e;width: 20%;">  
      		<%= link_to "", "#" ,:class => "glyphicon glyphicon-eye-open white-icon", :title => "Show Details" %>
	       	<%= link_to "", "#" ,:class => "glyphicon glyphicon-edit white-icon", :title => "Edit Details" %>
	       	<%= link_to "", "#" , :class => "glyphicon glyphicon-trash white-icon", :title => "Delete Details" %>

      	</td>
       </tr>
      <% end %>
   
  </tbody>
</table>

</div>

<style type="text/css">
	h1.boy_head{
		border-bottom: 3px solid brown;
		color: wheat;
	}

	span.boyspan{
		color:yellowgreen;
		padding-left: 10px;
	}

	table.table-dark {
		color: #fff;
    background-color: #212529;
	}

	.table-dark.table-striped tbody tr:nth-of-type(odd) {
    background-color: rgba(255,255,255,.05);
}

a.white-icon{
	color: white;
	padding-right: 15px;
}

</style>